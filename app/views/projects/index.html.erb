<h1>INDEX DE PROJECTS</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name:</th>
      <th scope="col">email:</th>
      <th scope="col">status:</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @project_participants.each do |participant| %>
      <tr>
        <td><%= "#{participant.user.name}" %></td>
        <% if participant.is_founder? %>
          <td><%= "founder"%></td>
        <% else %>
          <td><%= "non-founder" %></td>
        <% end %>
        <td><%= "#{participant.user.email}" %></td>
        <% if @participant.first.is_founder? %>
          <td><%=  link_to "edit member status", edit_project_participant_path(id: participant.id, project_id: @project.id)  %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
