<div class=container>
  <div class="form-project"> 
    <h2 class="heading text-center">Edit my project</h2>
    <%= simple_form_for(@project) do |f| %>
      <div class="input-area">
        <div class="container project-infos-2">
          <div class="container">
            <div class="main-infos">
              <%=f.input :name, required: true, label: "Give your project a name" %>
              <%= f.input :description, required: true, label: "What is it about? Brief explanation! (max 120 characters)" %>
              <%= f.input :photo, as: :file, label: "If you want, attach a photo for your project banner" %>
              <%= f.input :is_suspended, as: :radio_buttons, collection: [['No', false], ['Yes', true]], :label => "Suspend project?", data: { confirm: "Are you sure you want to suspend this project?" } %>
            </div>
          </div>
          <div class="container">
            <div class="social-links-2">
              <%= f.input :linkedin_url, label: "Does it have a LinkedIn page?" %>
              <%= f.input :github_url, label: "Does it have a GitHub page?" %>
              <%= f.input :trello_url, label: "Does it have a Trello page?" %>
            </div>
            <div class="form-actions project-submit-btn">
              <%= f.submit "Submit changes" %>
              <div class="delete-link-container">
                <%= link_to "delete project", project_destroy_path(id: @project.id), method: :delete, data: { confirm: "Are you sure you want to permanently delete this project?" } %>
              </div>
            </div>
          </div>
        </div>
        <div class="container project-rich-text">
          <div class="rich-text-area">
            <%= f.input :content, required: true, as: :rich_text_area, label: "Throughly describe your project Goal and story, be creative!" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

