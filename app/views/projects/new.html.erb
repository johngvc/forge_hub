
<div class=master-container>
  <div class="form"> 
    <h2 class="heading text-center">Create a new project</h2>
    <%= simple_form_for(@project) do |f| %>
      <%=f.input :name, required: true, placeholder: "Your project name" %>
      <%= f.label :description, 'Description'%>
      <%= f.text_area :description, required: true, style: "width: 100%;" %>
      <%= f.input :linkedin_url %>
      <%= f.input :github_url %>
      <%= f.input :trello_url %>
      <%= f.input :photo, as: :file, required: true %>
      <div class="form-actions">
        <%= f.submit "Create my new project!", style: "margin-bottom: 15px; border: none;" %>
      </div>
    <% end %>
  </div>
</div>

