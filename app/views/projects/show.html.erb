<h1><%= @project.name %> </h1>

<h2><% @participants.each do |participant| %></h2>
  <ul>
    <li><%= "#{participant.user.name}" %></li>
    <% if participant.is_founder? %>
      <li><%= "Status: Founder"%></li>
    <% else %>
      <li><%= "Status: Participant" %></li>
    <% end %>
  </ul>

<%= link_to user_adoption_confirm_path(id: @adoption.id), method: :post do %>
  <div class="btn btn-success", style="width: 180px">confirm adoption</div>
<% end %>


<% end %>
