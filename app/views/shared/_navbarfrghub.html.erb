<div class="reset-margin nav-bar">
  <div class="logo">
    <a class="reset" href="/"><div class="img"></div></a>
    <div class="nav-bar-search-input">
      <i class="fas fa-search"></i>
      <form action="">
        <input type="text" placeholder="Find on Forgehub">
      </form>
    </div>
  </div>

  <% if user_signed_in? || controller_name == 'sessions' %>
    <div class="avatar-section">
      <div class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </div>
        <div class="nav-item">
          <%= link_to "My projects", "#", class: "nav-link" %>
        </div>
        <div class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", "#", class: "dropdown-item" %>
            <%= link_to "Edit my account", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
    </div>
        
  <% else %>
    <div class="sign-in-section">
          <a href="/users/sign_in"><button class="Log-in-btn">LOG IN</button></a>
    </div>
  <% end %>
</div>