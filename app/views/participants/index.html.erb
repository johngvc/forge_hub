<div class="container">
  <h1><%= link_to "#{@project.name}", project_path(id: @project.id) %></h1>
  <p></p><p></p>

  <% if @current_participant.is_founder? %>
    <%= render partial: 'index_founder', locals: { project: @project, participant: @participant, current_participant: @current_participant } %>

  <% elsif @current_participant.status == 'cofounder' %>
    <%= render partial: 'index_cofounder', locals: { project: @project, participant: @participant, current_participant: @current_participant } %>

  <% else %>
    <%= render partial: 'index_general', locals: { project: @project, participant: @participant, current_participant: @current_participant } %>
  <% end %>

</div>
