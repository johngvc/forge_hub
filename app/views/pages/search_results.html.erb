<h1><%= @parametros %></h1>
<%= form_tag("/search_result", method: "get") do %>
  <%= label_tag(:project_name, "Project name") %>
  <%= text_field_tag(:project_name) %>
  <%= label_tag(:category, "Project category") %>
  <%= text_field_tag(:category) %>
  <%= label_tag(:tags, "Project tags") %>
  <%= text_field_tag(:tags) %>
  <%= submit_tag("Search") %>
<% end %>
<ul>
  <% Project.search_by_tag(@parametros[:tags]).each do |project| %>
    <li>
      <%= "#{project.name}:" %>
      <p>tags:</p>
      <% project.tags.each do |tag| %>
        <p><%= tag.name %></p>
      <% end %>
    </li>
  <% end %>
</ul>
