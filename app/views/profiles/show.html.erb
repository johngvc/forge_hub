<div class="profile-page">
    <div class="profile-section">
        <% if @user && @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, class: "avatar-big" %>
        <% elsif @user && @user.picture_url.present? %>
            <%= image_tag @user.picture_url, class: "avatar-big" %>
        <% else %>
            <%= image_tag "https://res.cloudinary.com/johngvc/image/upload/v1614782060/florencia-potter-yxmNWxi3wCo-unsplash_jhoyej.jpg", class: "avatar-big" %>
        <% end %>


        <% if @user == current_user %>
            <a href="<%= edit_user_registration_path(@user.id) %>">
                Edit my profile <i class="fas fa-edit"></i>
            </a>
        <% else %>
            <a href="<%= edit_user_registration_path(@user.id) %>" style="visibility: hidden;">
            Edit my profile <i class="fas fa-edit"></i>
            </a>
        <% end %>



        <div class="user-info-acc">
            <ul>
                <li><h2><%= @user.name %></h2></li>
                    <li><p>Email: <%= @user.email %></p></li>
                    <li><p>Specialty: Lorem ipsum, dolor sit</p></li>
                    <li><p>Description: Lorem ipsum, dolor sit</p></li>
            </ul>
        </div>

        <div class="user-info">
            <p>
                <i class="fas fa-briefcase"></i>
                Founded 4 projects
            </p>
            <p>
                <i class="fas fa-search"></i>
                Looking for 3 co-founders
            </p>
        </div>

    </div>

    <div class="second-section">
        <div class="projects-section">
            <h2>Active Projects</h2>
            <div class="card-container">

                <% @ongoing_projects_participating.each do |project| %>
                    <%= render 'shared/projectBigCard', project: project if !project.nil?%>
                <% end %>
                <% @suspended_projects_participating.each do |project| %>
                    <%= render 'shared/projectBigCard', project: project if !project.nil? %>
                <% end %>
            </div>
        </div>

        <div class="messages-section">
            <h2>Messages</h2>

            <div style="margin-top: 30px; margin-bottom: 30px; display: flex; flex-direction: row; justify-content: center;">
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#sendNewMessageModal" style="width: 180px;">send a new message</button>
            </div>




            <div class="card-container">
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
                <%= render 'shared/messageCard' %>
            </div>
        </div>
    </div>
</div>


  <!-- Modal -->
  <div class="modal fade" id="sendNewMessageModal" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog" role="document">

      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">send the founders a message asking to join this project</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">

            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @message, url: profile_chat_messages_create_path(participant_id: participant.id), method: :post do |f| %>
            <%= f.input :user_receiver, label: "receiver e-mail"  %>
            <%= f.input :content, as: :text %>
        </div>
          <div class="modal-footer">
            <%= f.submit, "send message" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <!-- Modal -->
